@page
@model filmDunyasi.Pages.Admin.Director.CreateModel

@{
    ViewData["Title"] = "Create";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<h1>Create</h1>

<h4>Director</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Director.FirstName" class="control-label"></label>
                <input asp-for="Director.FirstName" class="form-control" />
                <span asp-validation-for="Director.FirstName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Director.LastName" class="control-label"></label>
                <input asp-for="Director.LastName" class="form-control" />
                <span asp-validation-for="Director.LastName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Director.BirthDate" class="control-label"></label>
                <input asp-for="Director.BirthDate" class="form-control" />
                <span asp-validation-for="Director.BirthDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Director.Gender" class="control-label"></label>
                <select asp-for="Director.Gender"
                        asp-items="Html.GetEnumSelectList<filmDunyasi.Models.GenderType>()"
                        class="form-control" >
                    </select>
                <span asp-validation-for="Director.Gender" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Director.CountryID" class="control-label"></label>
                <select asp-for="Director.CountryID" class ="form-control" asp-items="ViewBag.CountryID"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
